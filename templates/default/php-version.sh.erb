########################################################################################
# php-version (activate default PHP version and autocompletion)
# export PHP_VERSIONS                  => reflects location of compiled PHP versions
# export PHPVERSION_DISABLE_COMPLETE=1 => to disable shell completion
########################################################################################
export PHP_VERSIONS="<%= node['phpversion']['versions_dir'] %>"
source <%= node['phpversion']['install_dir'] %>/php-version.sh
<% if node['phpversion']['default_version'] %>
php-version <%= node['phpversion']['default_version'] %> >/dev/null
<% end %>
